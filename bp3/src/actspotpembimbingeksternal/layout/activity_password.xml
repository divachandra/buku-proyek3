<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="12dp"
    tools:context=".activity.PasswordActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sandi Lama"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_oldpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:inputType="textPassword"
        android:background="@drawable/custom_edittext"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sandi Baru"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_newpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:inputType="textPassword"
        android:background="@drawable/custom_edittext"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Sandi Baru"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_cnewpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:inputType="textPassword"
        android:background="@drawable/custom_edittext"/>

    <Button
        android:id="@+id/btn_savepass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:layout_marginVertical="12dp"/>

</LinearLayout>