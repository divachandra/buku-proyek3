<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_perusahaan"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"/>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_marginBottom="18dp"
            android:layout_marginHorizontal="12dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_info_outline_black"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anda belum melakukan pendaftaran perusahaan internship. Segera isi form berikut ini dan pastikan Anda melakukan pendaftaran ketika berada di perusahaan internship agar lebih mudah melakukan validasi."
                android:gravity="center"
                android:textSize="16sp"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Perusahaan"
                android:layout_marginTop="20dp"/>
            <Spinner
                android:id="@+id/sp_perusahaan"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginVertical="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pembimbing"
                android:layout_marginTop="20dp"/>
            <Spinner
                android:id="@+id/sp_pembimbing"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginVertical="8dp"/>
            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>